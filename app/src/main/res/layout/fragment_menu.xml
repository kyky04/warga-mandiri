<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MenuFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_large">

            <TextView
                android:id="@+id/tv_pesan_pembuka"
                android:layout_gravity="center"
                fontPath="fonts/lato_regular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PESAN PEMBUKA"
                android:textSize="15sp"
                tools:ignore="MissingPrefix" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/spacing_very_small"
                android:paddingLeft="@dimen/spacing_very_small"
                android:paddingRight="@dimen/spacing_very_small"
                android:paddingTop="@dimen/spacing_very_small"
                android:visibility="visible">

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_medium"
                    android:layout_weight="1"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="2dp">

                    <RelativeLayout
                        android:id="@+id/btn_data_master"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_data_master"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:padding="@dimen/spacing_large"
                            android:src="@drawable/ic_data_master" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_below="@+id/img_data_master"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="@dimen/spacing_medium">

                            <TextView
                                fontPath="fonts/lato_regular.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DATA MASTER"
                                android:textSize="12sp"
                                tools:ignore="MissingPrefix" />

                        </LinearLayout>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_medium"
                    android:layout_weight="1"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="2dp">

                    <RelativeLayout
                        android:id="@+id/btn_produk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_transaksi"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:padding="@dimen/spacing_large"
                            android:src="@drawable/ic_transaksi" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_below="@+id/img_transaksi"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="@dimen/spacing_medium">

                            <TextView
                                fontPath="fonts/lato_regular.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="PRODUK"
                                android:textSize="12sp"
                                tools:ignore="MissingPrefix" />

                        </LinearLayout>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/spacing_very_small"
                android:paddingLeft="@dimen/spacing_very_small"
                android:paddingRight="@dimen/spacing_very_small"
                android:paddingTop="@dimen/spacing_very_small"
                android:visibility="visible">


                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_medium"
                    android:layout_weight="1"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="2dp">

                    <RelativeLayout
                        android:id="@+id/btn_kelola_toko"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_kelola_toko"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:padding="@dimen/spacing_large"
                            android:src="@drawable/ic_member1" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_below="@+id/img_kelola_toko"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="@dimen/spacing_medium">

                            <TextView
                                fontPath="fonts/lato_regular.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="MEMBER"
                                android:textSize="12sp"
                                tools:ignore="MissingPrefix" />

                        </LinearLayout>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_medium"
                    android:layout_weight="1"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="2dp">

                    <RelativeLayout
                        android:id="@+id/btn_banner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_banner"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:padding="@dimen/spacing_large"
                            android:src="@drawable/ic_banner" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_below="@+id/img_banner"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="@dimen/spacing_medium">

                            <TextView
                                fontPath="fonts/lato_regular.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BANNER"
                                android:textSize="12sp"
                                tools:ignore="MissingPrefix" />

                        </LinearLayout>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/spacing_very_small"
                android:paddingLeft="@dimen/spacing_very_small"
                android:paddingRight="@dimen/spacing_very_small"
                android:paddingTop="@dimen/spacing_very_small"
                android:visibility="visible">


                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_medium"
                    android:layout_weight="1"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="2dp">

                    <RelativeLayout
                        android:id="@+id/btn_transaksi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_user"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:padding="@dimen/spacing_large"
                            android:src="@drawable/ic_pesanan" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_below="@+id/img_user"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="@dimen/spacing_medium">

                            <TextView
                                fontPath="fonts/lato_regular.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="TRANSAKSI"
                                android:textSize="12sp"
                                tools:ignore="MissingPrefix" />

                        </LinearLayout>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_medium"
                    android:layout_weight="1"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="2dp">

                    <RelativeLayout
                        android:id="@+id/btn_bank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_bank"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:padding="@dimen/spacing_large"
                            android:src="@drawable/ic_bank" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_below="@+id/img_bank"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="@dimen/spacing_medium">

                            <TextView
                                fontPath="fonts/lato_regular.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BANK"
                                android:textSize="12sp"
                                tools:ignore="MissingPrefix" />

                        </LinearLayout>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/spacing_very_small"
                android:paddingLeft="@dimen/spacing_very_small"
                android:paddingRight="@dimen/spacing_very_small"
                android:paddingTop="@dimen/spacing_very_small"
                android:visibility="visible">

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_medium"
                    android:layout_weight="1"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="2dp">

                    <RelativeLayout
                        android:id="@+id/btn_pengumuman"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_pengumuman"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:padding="@dimen/spacing_large"
                            android:src="@drawable/ic_pengumuman" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_below="@+id/img_pengumuman"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="@dimen/spacing_medium">

                            <TextView
                                fontPath="fonts/lato_regular.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="PENGUMUMAN"
                                android:textSize="12sp"
                                tools:ignore="MissingPrefix" />

                        </LinearLayout>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_medium"
                    android:layout_weight="1"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="2dp">

                    <RelativeLayout
                        android:id="@+id/btn_notifikasi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_notifikasi"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:padding="@dimen/spacing_large"
                            android:src="@drawable/ic_notifikasi" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_below="@+id/img_notifikasi"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="@dimen/spacing_medium">

                            <TextView
                                fontPath="fonts/lato_regular.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BUAT TOKO ANDA"
                                android:textSize="12sp"
                                tools:ignore="MissingPrefix" />

                        </LinearLayout>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>

            <TextView
                android:id="@+id/tv_pesan_penutup"
                android:layout_marginTop="@dimen/spacing_large"
                android:layout_gravity="center"
                fontPath="fonts/lato_regular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PESAN PENUTUP"
                android:textSize="15sp"
                tools:ignore="MissingPrefix" />


        </LinearLayout>

    </ScrollView>
</FrameLayout>